%h1 Edit Profile

-unless @user ==nil
  -if @user.errors.any?
    %ul
    -@user.errors.full_messages.each do |msg|
      %li #{msg}
      
= form_tag user_path(@user), :method => :put, :id =>'edit_user' do

  .form-group
    .row
      .col-md-4
        = label :user, :first_name, 'First Name'
        = text_field :user, 'first_name', :id => 'edit_first_name', class: 'form-control'
  .form-group
    .row
      .col-md-4
        = label :user, :last_name, 'Last Name'
        = text_field :user, 'last_name', :id => 'edit_last_name', class: 'form-control'
  .form-group
    .row
      .col-md-4
        = label :user, :user_id, 'User-ID'
        = text_field :user, 'user_id', :id => 'edit_id', class: 'form-control'
  .form-group
    .row
      .col-md-4 
        = label :user, :email, 'E-Mail'
        = text_field :user, 'email', :id => 'edit_email', class: 'form-control'
  .form-group
    .row
      .col-md-4 
        = label :user, :password, 'Password'
        = password_field :user, 'password', :id => 'edit_password', class: 'form-control'
  .form-group
    .row
      .col-md-4
        = label :user, :password_confirmation, 'Confirm Password'
        = password_field :user, 'password_confirmation', :id => 'edit_password_confirmation', class: 'form-control'


  = submit_tag 'Submit', :id => 'edit_submit', class: 'btn btn-primary'
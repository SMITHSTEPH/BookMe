%h1 All Books

%table#books{:class => "sortBooks"}
  %thead
    %tr
      %th{:width => "100"}
      %th{:width => "200"}= Sortable "title", "Book Title"
      %th{:width => "200"}= Sortable "author"
      %th{:width => "200"}= Sortable "price", "Buy Now Price"
      %th{:width => "100"}= Sortable "auction_start_price", "Auction Price"
  %tbody
    - @books.each do |book|
      %tr
        %td= image_tag asset_path(book.image), :size => '75x100'
        %td= link_to "#{book.title}", book_path(book)
        %td= book.author
        %td= "$"+book.price
        %td= "$"+book.bid_price

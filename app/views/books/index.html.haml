-#  This file is app/views/books/index.html.haml
%h1 All Books

%table#books
  %thead
    %tr
      %th Book Title
      %th Author
      %th Price
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title 
        %td= book.author
        %td= book.price
        %td= link_to "More about #{book.title}", book_path(book)
= link_to 'My Books', mybooks_path

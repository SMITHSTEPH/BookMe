-#  This file is app/views/books/index.html.haml
= button_to 'My Books', mybooks_path, :method =>:get, :id => 'mybooks'
= button_to 'Sign Up/Login', login_path, :method =>:get
%h1 All Books

= form_tag books_path, :method => 'get' do 
  = text_field_tag :search, params[:search] 
  = submit_tag "Search" 

%table#books
  %thead
    %tr
      %th{:width => "100"}
      %th{:width => "200"} Book Title
      %th{:width => "200"} Author
      %th{:width => "100"} Price
      %th{:width => "100"} Auction Price
  %tbody
    - @books.each do |book|
      %tr
        %td= image_tag asset_path(book.image), :size => '75x100'
        %td= link_to "#{book.title}", book_path(book)
        %td= book.author
        %td= "$"+book.price
        %td= book.auction_start_price

%h1 Login

= form_tag sessions_path, :method => 'post' do
  
  = label :session, :email, 'Email'
  = text_field :session, 'email', :id => 'login_email'
  
  = label :session, :password, 'Password'
  = password_field :session, 'password'


  = submit_tag 'Log In', :id => 'login_submit'
  <br>
  = link_to 'Sign-up for an account', new_user_path, :id => 'signup'
!!!
%html
  %head
    %title BookMe
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  
  %nav.navbar.navbar-default{:role => "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => root_path} BookMe
        %ul.nav.navbar-nav
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Dropdown
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "#"} "Test 1"
              %li
                %a{:href => "#"} "Test 2"
              %li.divider
              %li
                %a 
                  - if flash[:notice]
                    #notice.flash_message= flash[:notice]
                  - elsif flash[:warning]
                    #warning.message= flash[:warning]
                  - if @current_user
                    %p You are logged in as #{@current_user.email} (User name: #{@current_user.user_id})
                    = link_to 'Log Out', logout_path, :method => 'delete', class: 'btn btn-danger'
                  - else
                    = link_to 'Sign Up/Login', login_path, :method =>:get, class: 'btn btn-info'
    // %h1.title
    //   = link_to "BookMe", root_path, class: 'nounderline'
    
  %body
    #main
      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      - if @current_user
        %p You are logged in as #{@current_user.email} (User name: #{@current_user.user_id})
        = button_to 'Log Out', logout_path, :method => 'delete', class: 'btn btn-danger'
      - else
        = button_to 'Sign Up/Login', login_path, :method =>:get, class: 'btn btn-info'
      = yield
